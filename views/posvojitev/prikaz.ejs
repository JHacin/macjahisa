    <% include ../partials/header %>
    <% include ../partials/functions/muce %>
<div class="nonindex">
  <div class="container" id="muca_container_div">
    <div class="content" id="muca_content_div">
    <!-- združi vse slike -->
    <%
      var slike = [];
      var files = [muca.file_name1, muca.file_name2, muca.file_name3, muca.file_name4];

      files.forEach(function(file) {
        if(file !== undefined && file !== "" && file !== "NULL") {
          slike.push(file);
        }
      })
    %>
    <div id="back_to_cats_list">
      <em>
        <a id="back_to_cats_list_link" href="/posvojitev/muce">
          <i class="fas fa-angle-double-left"></i> Nazaj na seznam vseh muc
        </a>
      </em>
    </div>



    <div class="cat_top">
      <h1 id="muca_title_ime"><%= muca.ime %></h1>
      <!-- Če še ni lokalnih social variablov -->
        <% if (typeof social_description == "undefined") {
          social_description = "Mačja hiša je projekt Društva za pomoč živalim v stiski SLO, strokovnjaki z veterinarskega in živalovarstvenega področja, angleško organizacijo Cats protection ter aktivnimi posamezniki. Zaživel je s pričetkom leta 2009 z namenom izboljšanja stanja na področju problematike zavrženih in prostoživečih mačk.";
        }
        %>
      <div class="cat_social_desktop">
        <h3>Deli:</h3>
        <div class="fb-like"
          data-href="<%= social_url %>"
          data-layout="button"
          data-action="like"
          data-show-faces="true">
        </div>
        <div class="fb-share-button"
          data-href="<%= social_url %>"
          data-layout="button">
        </div>
        <a class="twitter-share-button"
          href="https://twitter.com/intent/tweet?url=<%= social_url %>&text=<%- social_description %>"
          data-text="<%= social_description %>">
        <i class="fab fa-twitter"></i> Tweet</a>
        <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
      </div>
    </div>


    <div class="cat_full">
      <div class="photos">
        <% slike.forEach(function(slika){ %>
          <div class="photo">
            <img src="/files/oglasi_muce/<%= slika %>" />
          </div>
        <% }); %>
      </div>
      <div class="cat_social_mobile">
        <div class="fb-like"
          data-href="<%= social_url %>"
          data-layout="button"
          data-action="like"
          data-show-faces="true">
        </div>
        <div class="fb-share-button"
          data-href="<%= social_url %>"
          data-layout="button">
        </div>
        <a class="twitter-share-button"
          href="https://twitter.com/intent/tweet?url=<%= social_url %>&text=<%- social_description %>"
          data-text="<%= social_description %>">
        <i class="fab fa-twitter"></i> Tweet</a>
        <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
      </div>

      <div class="desc">
        <h2>O <%= muca.spol == 3 ? "nama" : "meni" %>:</h2>
        <div class="full_desc">
          <%- muca.opis %>
        </div>
        <div class="contact">
          <h2>Kontakt:</h2>
          <p class="contact_info"><%= muca.kontakt %></p>
        </div>
        <% if(muca.posvojitev_na_daljavo == 1) { %>
          <h2>Posvojitev na daljavo:</h2>
          <div class="boter_true">
            <p>Muca je na voljo za posvojitev na daljavo. Če jo želite posvojiti na daljavo, lahko to storite preko <a onclick="this.target='_blank'" href="http://www.macjiboter.si/posvojitev_na_daljavo_obrazec.php?id=1637">spletnega obrazca</a> in postanete mačji boter. Preberite si več o <a onclick="this.target='_blank'" href="http://www.macjiboter.si/o_macjem_botru.php">projektu Mačji boter</a>.
          </p></div>
        <% }; %>

      </div>

      <div class="data">
        <div class="data_basic">
          <div class="data_header"><h3>Osnovni podatki</h3></div>
          <div class="data_row">
            <!-- SPOL -->
            <div class="row_def">Spol</div>
            <div class="row_val">
              <i class="fas fa-<%= spolSimbol(muca.spol) %>" aria-hidden="true"></i> <%= spolMuce(muca.spol) %>
            </div>
          </div>
          <div class="data_row">
            <!-- STAROST -->
            <div class="row_def">Starost</div>
            <div class="row_val"><i class="fas fa-paw" aria-hidden="true"></i> <%= starostVMesecih(muca.mesec_rojstva) %></div>
          </div>
          <div class="data_row">
            <!-- DATUM SPREJEMA -->
            <div class="row_def">Datum sprejema</div>
            <div class="row_val"><i class="fas fa-calendar" aria-hidden="true"></i> <%= moment(muca.datum).format("D[. ]M[. ]YYYY") %></div>
          </div>
        </div>
        <div class="data_vet">
          <!-- VET STATUS -->
          <div class="data_header"><h3>Veterinarski status</h3></div>
          <div class="data_title_row">Opravljeni posegi:</div>
          <div class="data_row">
            <div class="row_def">Sterilizacija / kastracija</div>
            <div class="row_val"><i class="fas fa-<%= muca.vet.s_k == true ? "check" : "times" %>" aria-hidden="true"></i></div>
          </div>
          <div class="data_row">
            <div class="row_def">Čipiranje</div>
            <div class="row_val"><i class="fas fa-<%= muca.vet.cipiranje == true ? "check" : "times" %>" aria-hidden="true"></i></div>
          </div>
          <div class="data_row">
            <div class="row_def">Cepljenje</div>
            <div class="row_val"><i class="fas fa-<%= muca.vet.cepljenje == true ? "check" : "times" %>" aria-hidden="true"></i></div>
          </div>
          <div class="data_row">
            <div class="row_def">Razparazitenje</div>
            <div class="row_val"><i class="fas fa-<%= muca.vet.razparazit == true ? "check" : "times" %>" aria-hidden="true"></i></div>
          </div>
          <div class="data_title_row">Zdravstveno stanje:</div>
          <div class="data_row">
            <div class="row_def">FeLV</div>
            <div class="row_val"><i class="fas fa-<%= muca.vet.felv == true ? "plus" : "minus" %>" aria-hidden="true"></i></div>
          </div>
          <div class="data_row">
            <div class="row_def">FIV</div>
            <div class="row_val"><i class="fas fa-<%= muca.vet.fiv == true ? "plus" : "minus" %>" aria-hidden="true"></i></div>
          </div>
          <!-- END VET STATUS -->
        </div>
      </div>
    </div>
    </div>
  </div>
</div>
<% include ../partials/footer %>
