                                    <i class="far fa-file-pdf"></i>
                                <% } %>
                                <% if (clanek.tip === "povezava") { %>
                                    <i class="fas fa-external-link-alt"></i>
                                <% } %>
                            </a></li>
                    <% }); %>
                </ul>
            </div>
            <div class="col-12 col-lg-4 pb-5">
                <% include ../partials/sidebar %>
            </div>
        </div>
    </div>
</div>

