<% include ../partials/header %>
<% include ../partials/nonindex %>

<div class="with-bootstrap">
    <div class="container">
        <div class="row content-wrapper pt-5">
            <div class="content-body col-12 col-lg-8 pb-5">
                <%- podstran.vsebina %>

                <!-- SORTIRANJE ÄŒLANKOV -->
                <%
                var prispevki = [];
                var nasveti = [];
                var zdravje = [];
                var zakonodaja = [];

                clanki.forEach(function(clanek){
                    if(clanek.kategorija == "prispevki" && clanek.objava == "1") prispevki.push(clanek);
                    if(clanek.kategorija == "nasveti" && clanek.objava == "1") nasveti.push(clanek);
                    if(clanek.kategorija == "zdravje" && clanek.objava == "1") zdravje.push(clanek);
                    if(clanek.kategorija == "zakonodaja" && clanek.objava == "1") zakonodaja.push(clanek);
                });
                %>
                <!-- SORTIRANJE END -->

                <h2>Prispevki</h2>
                <ul>
                    <% prispevki.forEach(function(clanek){ %>
                        <li><a class="clanek_link" href="/dobro-je-vedeti/prispevki-clanki-povezave/<%= clanek.dbid %>"
                               target="<%= clanek.tip === 'besedilo' ? '_top' : '_blank' %>">
                                <%= clanek.naslov %>
                                <% if (clanek.tip === "besedilo") { %>
                                    <i class="fab fa-readme"></i>
                                <% } %>
                                <% if (clanek.tip === "datoteka") { %>
                                    <i class="far fa-file-pdf"></i>
                                <% } %>
                                <% if (clanek.tip === "povezava") { %>
                                    <i class="fas fa-external-link-alt"></i>
                                <% } %>
                            </a></li>
                    <% }); %>
                </ul>

                <h2>Nasveti</h2>
                <ul>
                    <% nasveti.forEach(function(clanek){ %>
                        <li><a  class="clanek_link" href="/dobro-je-vedeti/prispevki-clanki-povezave/<%= clanek.dbid %>"
                                target="<%= clanek.tip === 'besedilo' ? '_top' : '_blank' %>">
                                <%= clanek.naslov %>
                                <% if (clanek.tip === "besedilo") { %>
                                    <i class="fab fa-readme"></i>
                                <% } %>
                                <% if (clanek.tip === "datoteka") { %>
                                    <i class="far fa-file-pdf"></i>
                                <% } %>
                                <% if (clanek.tip === "povezava") { %>
                                    <i class="fas fa-external-link-alt"></i>
                                <% } %>
                            </a></li>
                    <% }); %>
                </ul>

                <h2>Zdravje</h2>
                <ul>
                    <% zdravje.forEach(function(clanek){ %>
                        <li><a class="clanek_link" href="/dobro-je-vedeti/prispevki-clanki-povezave/<%= clanek.dbid %>"
                               target="<%= clanek.tip === 'besedilo' ? '_top' : '_blank' %>">
                                <%= clanek.naslov %>
                                <% if (clanek.tip === "besedilo") { %>
                                    <i class="fab fa-readme"></i>
                                <% } %>
                                <% if (clanek.tip === "datoteka") { %>
                                    <i class="far fa-file-pdf"></i>
                                <% } %>
                                <% if (clanek.tip === "povezava") { %>
                                    <i class="fas fa-external-link-alt"></i>
                                <% } %>
                            </a></li>
                    <% }); %>
                </ul>

                <h2>Zakonodaja</h2>
