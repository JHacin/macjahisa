<!-- STAROST -->
starostVMesecih = function(mesec_rojstva) {
  var result = Math.floor(moment().diff(moment(mesec_rojstva), "months", true));
  if(mesec_rojstva == null) {
    return "še ni znana";
  } else if(result < 1) {
      return "manj kot 1 mesec";
    } else if(result < 12) {
    if(result == 1) {
      return "1 mesec";
    } else if (result == 2) {
      return "2 meseca";
    } else if (result == 3 || result == 4) {
      return result + " meseci";
    } else {
      return result + " mesecev";
    }
  } else if (result >= 12) {

    <!-- 1 leto in več -->
    var leta = Math.floor(result/12);
    var meseci = result%12;
    var leta_str = "let";
    var meseci_str = "mesecev";
    <!-- končnica za leta -->
    if(leta == 1) {
      leta_str = "leto";
    } else if (leta == 2) {
      leta_str = "leti";
    } else if (leta == 3 || leta == 4) {
      leta_str = "leta";
    }
    <!-- končnica za mesece -->
    if(meseci == 1) {
      meseci_str = "mesec";
    } else if (meseci == 2) {
      meseci_str = "meseca";
    } else if (meseci == 3 || meseci == 4) {
      meseci_str = "meseci";
    }

    <!-- Da ne kaže npr. 3 leta in 0 mesecev -->
    if(result >= 12 && result%12 == 0) {
      return leta + " " + leta_str;
    }

    return leta + " " + leta_str + " in " + meseci + " " + meseci_str;
  }
}

sestavaKontaktaCMS = function(email, tel) {
  var result = "";

  if(email == "Posvojitveni vprašalnik (ne spreminjaj!)") {
    return "posvojitveni_vprasalnik";
  }

  if(email != undefined && email != "") {
    result += email;
  }

  if(tel != undefined && tel != "") {
    result += " / ";
    result += tel;
  }

  return result;
}

