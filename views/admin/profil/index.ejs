<% include ../../partials/admin/header %>
<div class="header d-flex flex-row justify-content-between align-items-center">
  <h1 class="p-2 badge badge-secondary">Uredi osebne podatke</h1>
</div>
<hr class="header-divider" />

<form action="/admin/profil/<%= user._id %>?_method=PUT" method="POST">
  <div class="form-group">
    <label for="firstName">Ime:</label>
    <input type="text" id="firstName" name="firstName" style="width: auto;" class="form-control" value="<%= user.firstName %>" autofocus required>
  </div>
  <div class="form-group">
    <label for="lastName">Priimek:</label>
    <input type="email" id="lastName" name="lastName" style="width: auto;" class="form-control"  value="<%= user.lastName %>" required>
  </div>
  <div class="form-group">
    <label for="email">E-mail naslov:</label>
    <input type="email" id="email" name="email"  value="<%= user.email %>" style="width: auto;" class="form-control" required>
  </div>
  <input type="submit" class="btn btn-warning" value="Potrdi spremembe">
</form>

<% include ../../partials/admin/footer %>
