<% include ../../partials/admin/header %>
<% include ../../partials/functions/muce %>
<p><a href="/admin/muce/iscejo"><< Nazaj</a></p>

<h3>Vnesi novo muco</h3>

<form class="cmsForm">
  <div>
    <label for="ime">ime:</label>
    <input type="text" id="ime" autofocus name="ime" required/>
  </div>
  <div>
    <label for="datum">datum sprejema:</label>
    <input type="date" id="datum" name="datum" value="" required/>
  </div>
  <div>
    <label for="status">stanje:</label>
    <select id="status" name="status">
      <option selected disabled></option>
      <option value="1">oddaja se prvič</option>
      <option value="2">oddaja se ponovno</option>
      <option value="3">se ne oddaja oz. bo ostal/-a za nedoločen čas</option>
      <option value="4">v novem domu</option>
      <option value="5">R.I.P.</option>
    </select>
  </div>

  <div>
    <label for="mesec_rojstva">mesec rojstva:</label>
    <input type="month" id="mesec_rojstva" name="mesec_rojstva" required/>
  </div>
  <div>
    <label for="spol">spol:</label>
    <select id="spol" name="spol">
      <option selected disabled>--</option>
      <option value="1">samček</option>
      <option value="2">samička</option>
      <option value="3">samček in samička</option>
      <option value="4">neznano</option>
    </select>
  </div>
  <div>
    <label for="opis">opis:</label>
    <textarea id="summernote" name="opis" required></textarea>
  </div>
  <div>
    <label for="kontakt">kontakt:</label>
    <select id="kontakt" name="kontakt">
      <% kontakti.forEach(function(kontakt){ %>
        <% var k = sestavaKontaktaCMS(kontakt.email, kontakt.tel); %>
        <option value="<%= k %>" <%= kontakt.email == "info@macjahisa.si" ? "selected" : "" %>><%= "(" + kontakt.ime + ") " + k %></option>
      <% }); %>
    </select>
  </div>
  <div>
    <label for="posvojitev_na_daljavo">posvojitev_na_daljavo:</label>
    <select id="posvojitev_na_daljavo" name="posvojitev_na_daljavo">
      <option selected disabled>--</option>
      <option value="0">ne</option>
      <option value="1">da</option>
    </select>
  </div>
  <div>
    <hr />
    <h4>VET. STATUS:</h4>
    <div>
      <label for="vet[s_k]">Sterilizirana / kastriran:</label>
      <input type="checkbox" id="vet[s_k]" name="vet[s_k]" />
      <label for="vet[cipiranje]">Čipirana:</label>
      <input type="checkbox" id="vet[cipiranje]" name="vet[cipiranje]" />
      <label for="vet[cepljenje]">Cepljena:</label>
      <input type="checkbox" id="vet[cepljenje]" name="vet[cepljenje]" />
      <label for="vet[razparazit]">Razparazitena:</label>
      <input type="checkbox" id="vet[razparazit]" name="vet[razparazit]" />
      <label for="vet[felv]">FeLV pozitivna:</label>
      <input type="checkbox" id="vet[felv]" name="vet[felv]" />
      <label for="vet[fiv]">FIV pozitivna:</label>
      <input type="checkbox" id="vet[fiv]" name="vet[fiv]" />
    </div>
    <hr />
  </div>
  <!-- GROUPING VARIABLES FOR CAT PICTURES -->
  <%
  var images = ["slika1", "slika2", "slika3", "slika4"];
  var count = images.length;
  %>

  <% for (var i = 0; i < count; i++) {

  slika = images[i];

  %>

  <div>
    <img class="slika" style="width: 150px;" src="" />
    <label for="<%= slika %>">Slika <%= i+1 %>:</label>
    <input type="file" class="catImgUploadInput" id="<%= slika %>" name="<%= slika %>" required/>
    <input type="hidden" class="hiddenImgUploadInput" id="<%= slika %>_crop" name="<%= slika %>_crop" />
  </div>

<% }; %>

<!-- MODAL -->
<div class="modal" id="imageCropModal" tabindex="-1" role="dialog" data-backdrop="static">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-body">
        <div class="img-container">
          <img src="" class="imagepreview" style="max-width: 100%;" >
        </div>
      </div>
      <div class="modal-footer" style="border-top: none;">
        <button type="button" class="btn btn-danger imageCropConfirm">Potrdi</button>
        <button type="button" class="btn btn-secondary imageCropCancel" data-dismiss="modal">Prekliči</button>
      </div>
    </div>
  </div>
</div>
<!-- END MODAL -->
</form>
<button type="button" class="btn btn-secondary" id="formSubmit">Potrdi</button>

<style>
form {
  /* Just to center the form on the page */
  margin: 0 auto 0 0;
  width: 100%;
  /* To see the outline of the form */
  padding: 1em;
  border: 1px solid #CCC;
  border-radius: 1em;
}

form div + div {
  margin-top: 1em;
}

label {
  /* To make sure that all labels have the same size and are properly aligned */
  display: inline-block;
  width: 190px;
  text-align: right;
}

input, textarea {
  /* To make sure that all text fields have the same font settings
     By default, textareas have a monospace font */
  font: 1em sans-serif;

  /* To give the same size to all text fields */
  width: 300px;
  box-sizing: border-box;

  /* To harmonize the look & feel of text field border */
  border: 1px solid #999;
}

input:focus, textarea:focus {
  /* To give a little highlight on active elements */
  border-color: #000;
}

textarea {
  /* To properly align multiline text fields with their labels */
  vertical-align: top;

  /* To give enough room to type some text */
  height: 5em;
}

.button {
  /* To position the buttons to the same position of the text fields */
  padding-left: 190px; /* same size as the label elements */
}

button {
  /* This extra margin represent roughly the same space as the space
     between the labels and their text fields */
  margin-left: .5em;
}
</style>
