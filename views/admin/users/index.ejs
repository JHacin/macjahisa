<% include ../../partials/admin/header %>
<div class="header d-flex flex-row justify-content-between align-items-center">
  <h1 class="p-2 badge badge-secondary">Uporabniki CMSja</h1>
  <a href="/admin/users/add"><button class="btn btn-warning addOrEditButton">Dodaj novega uporabnika >></button></a>
</div>
<hr class="header-divider" />

<table id="tabela" class="display">
    <thead>
        <tr>
            <th>Ime</th>
            <th>Priimek</th>
            <th>E-mail naslov</th>
            <th>Stopnja pravic</th>
            <th>Uredi podatke</th>
        </tr>
    </thead>
    <tbody>
        <% users.forEach(function(user) { %>
          <tr>
              <td><%= user.firstName %></td>
              <td><%= user.lastName %></td>
              <td><%= user.email %></td>
              <td><%= user.adminLevel %></td>
              <td><a href="/admin/users/<%= user._id %>/edit"><i class="fas fa-edit" aria-hidden="true"></i></a></td>
          </tr>
        <% }) %>
    </tbody>
</table>



<% include ../../partials/admin/footer %>
