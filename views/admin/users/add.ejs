<% include ../../partials/admin/header %>
<p><a href="/admin/users"><< Nazaj</a></p>
<h3>Nov uporabnik</h3>

<form action="/admin/users" method="POST">
  <div class="required">
    <label for="username">Uporabniško ime:</label>
    <input type="text" name="username" id="username" autofocus required/>
  </div>
  <div class="required">
    <label for="password">Začetno geslo (uporabnik si ga lahko po prijavi spremeni):</label>
    <input type="text" name="password" id="password" required/>
  </div>
  <div class="required">
    <label for="firstName">Ime:</label>
    <input type="text" name="firstName" id="firstName" required/>
  </div>
  <div class="required">
    <label for="lastName">Priimek:</label>
    <input type="text" name="lastName" id="lastName" required/>
  </div>
  <div class="required">
    <label for="email">E-mail naslov:</label>
    <input type="email" name="email" id="email" required/>
  </div>
  <div class="required">
    <label for="adminLevel">Stopnja pravic:</label>
    <select id="adminLevel" name="adminLevel">
      <option value="cat_editor" selected>Urednik oglasov za muce</option>
      <option value="page_editor">Urednik strani</option>
      <option value="admin">Administrator</option>
      <option value="owner" <%= currentUser.adminLevel !== "owner" ? "disabled" : "" %>>Lastnik</option>
    </select>
  </div>
  <input type="submit" value="Dodaj">
</form>

<% include ../../partials/admin/footer %>
