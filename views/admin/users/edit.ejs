<h3>Uredi uporabnika</h3>

<form action="/admin/users/<%= user._id %>?_method=PUT" method="POST">
  <div class="required">
    <label for="username">Uporabni≈°ko ime:</label>
    <input type="text" name="username" id="username" value="<%= user.username %>" autofocus required/>
  </div>
  <div class="required">
    <label for="firstName">Ime:</label>
    <input type="text" name="firstName" id="firstName" value="<%= user.firstName %>" required/>
  </div>
  <div class="required">
    <label for="lastName">Priimek:</label>
    <input type="text" name="lastName" id="lastName" value="<%= user.lastName %>" required/>
  </div>
  <div class="required">
    <label for="email">E-mail naslov:</label>
    <input type="email" name="email" id="email" value="<%= user.email %>" required/>
  </div>
  <div>
    <label for="adminLevel">Stopnja pravic:</label>
    <select id="adminLevel" name="adminLevel">
      <option value="editor" <%= user.adminLevel == "editor" ? "selected" : "" %>>Urednik</option>
      <option value="admin" <%= user.adminLevel == "admin" ? "selected" : "" %>>Administrator</option>
      <option value="owner" <%= user.adminLevel == "owner" ? "selected" : "" %>> Lastnik</option>
      <!-- <option value="owner" <%= user.adminLevel == "owner" ? "selected" : "" %> <%= user.adminLevel !== "owner" ? "disabled" : "" %>>Lastnik</option> -->
    </select>
  </div>
  <input type="submit" value="Potrdi spremembe">
</form>

<% include ../../partials/admin/footer %>
