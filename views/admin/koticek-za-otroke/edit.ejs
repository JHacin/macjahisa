<% include ../../partials/admin/header %>
<p><a href="/admin/koticek-za-otroke"><< Nazaj</a></p>
<h3>Urejanje vsebine za otroški kotiček</h3>

<form action="/admin/koticek-za-otroke/<%= vsebina._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
  <div>
    <label for="vsebina[naslov]">Naslov:</label>
    <input type="text" name="vsebina[naslov]" id="naslov" size="70" value="<%= vsebina.naslov %>" autofocus/>
  </div>
  <div class="required">
    <label for="datum">Datum objave (najnovejše objave so prikazane prve):</label>
    <input type="date" id="datum" name="vsebina[datum]" value="<%= moment(vsebina.datum).format("YYYY-MM-DD") %>" required/>
  </div>
  <div class="required">
    <label for="vsebina[datoteka]">Datoteka:</label>
    <input type="text" name="vsebina[datoteka]" id="datoteka" value="<%= vsebina.datoteka %>" size="70" disabled/>
  </div>
  <div>
    <label for="vsebina[nova_datoteka]">Nova datoteka:</label>
    <input type="file" accept="application/msword application/pdf" name="vsebina[nova_datoteka]" id="nova_datoteka" size="70"/>
  </div>
  <div>
    <label for="vsebina[naslovna_slika]">Naslovna slika:</label>
    <input type="text" name="vsebina[naslovna_slika]" id="naslovna_slika" value="<%= vsebina.naslovna_slika %>" size="70" disabled/>
  </div>
  <div>
    <label for="vsebina[nova_naslovna_slika]">Nova naslovna slika:</label>
    <input type="file" accept="image/*" name="vsebina[nova_naslovna_slika]" id="nova_naslovna_slika" size="70"/>
  </div>
  <div>
    <label for="vsebina[kategorija]">Kategorija:</label>
    <select id="kategorija" name="vsebina[kategorija]">
      <option value="pobarvanka" <%= vsebina.kategorija == "pobarvanka" ? "selected" : "" %>>Pobarvanka</option>
      <option value="drugo" <%= vsebina.kategorija == "drugo" ? "selected" : "" %>>Drugo</option>
    </select>
  </div>
  <div>
    <label for="vsebina[objava]">Objava:</label>
    <select id="objava" name="vsebina[objava]">
      <option value="1" <%= vsebina.objava == "1" ? "selected" : "" %>>Da</option>
      <option value="0" <%= vsebina.objava == "0" ? "selected" : "" %>>Ne</option>
    </select>
  </div>
  <input type="submit" value="Potrdi spremembe">
</form>

<% include ../../partials/admin/footer %>
