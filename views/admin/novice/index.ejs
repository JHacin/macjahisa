<% include ../../partials/admin/header %>

<h3>Novice</h3>
<p><a href="/admin/novice/add">+ Dodaj novo</a></p>

<table id="tabela" class="display">
    <thead>
        <tr>
            <th>Datum objave</th>
            <th>Naslov</th>
            <th>Vsebina</th>
            <th>Objavil/-a</th>
            <th>Objava</th>
            <th>Prika≈æi</th>
            <th>Uredi</th>
        </tr>
    </thead>
    <tbody>
        <% novice.forEach(function(novica) { %>

          <tr>
              <td>
                <!-- hidden date format for table ordering purposes  -->
                <span class="hidden"><%= moment(novica.datum).format("YYYY[/]MM[/]DD") %></span>
                <!-- actual date format shown -->
                <%= moment(novica.datum).format("DD[.]MM[.]YYYY") %>
              </td>
              <td><%= novica.naslov %></td>
              <td><%- novica.vsebina.replace(/<(?:.|\n)*?>/gm, '').substring(0,200) + "..." %></td>
              <td><%= novica.user_id %></td>
              <td><%= novica.objava == "1" ? "Da" : "Ne" %></td>
              <td><a href="/novice/<%= novica._id %>" target="_blank"><i class="fa fa-eye" aria-hidden="true"></i></a></td>
              <td><a href="/admin/novice/<%= novica._id %>/edit"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a></td>
          </tr>
        <% }) %>
    </tbody>
</table>



<% include ../../partials/admin/footer %>
