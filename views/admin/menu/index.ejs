<% include ../../partials/admin/header %>

<h3>Urejanje menija</h3>
<p style="color: gray;"><a href="/admin/menu/add">+ Dodaj novo kategorijo</a></p>
<hr />
<div class="kategorije">
  <% kategorije.forEach(function(kategorija) { %>
    <div class="kategorija">
      <strong><%= kategorija.naslov %>
        <a href="/admin/menu/<%= kategorija._id %>/edit"><i class="fas fa-edit" aria-hidden="true"></i></a></strong>
      <ul>
        <% podstrani.forEach(function(podstran){ %>
          <% if (podstran.kategorija.equals(kategorija._id)) { %>
            <li><%= podstran.naslov %></li>
          <% } %>
        <% }); %>
      </ul>
    </div>
  <% }); %>
</div>
<% include ../../partials/admin/footer %>
