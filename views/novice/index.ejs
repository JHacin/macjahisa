<% include ../partials/header %>
<% include ../partials/nonindex %>

    <!-- main div -->
    <div class="novice_seznam">
      <!-- HTML data -->
      <div class="list">

        <% novice.forEach(function(novica) { %>
          <div class="list-item">
              <a href="/novice/<%= novica.dbid %>" class="novica_naslov">
                <h4 class="novica_naslov_title"><%= novica.naslov %></h4>
              </a>
                <p class="novica_naslov_datum"><%= moment(novica.datum).format("DD[.]MM[.]YYYY") %></p>
            <p class="novica_txt"><%- novica.vsebina.replace(/<(?:.|\n)*?>/gm, '').substring(0,250) + "..." %>
              <a href="/novice/<%= novica.dbid %>">
                <i class="fas fa-forward" aria-hidden="true"></i></p>
              </a>
          </div>

        <% }) %>

      </div>

      <!-- no results found -->
       <div class="jplist-no-results">
          <p>Ni rezultatov.</p>
       </div>


    <div class="jplist-panel">
      <!-- pagination control -->
      <div
         class="jplist-pagination"
         data-control-type="pagination"
         data-control-name="paging"
         data-control-action="paging"
         data-items-per-page="5">
      </div>

      <div
         class="jplist-label"
         data-type="Stran {current} od {pages}"
         data-control-type="pagination-info"
         data-control-name="paging"
         data-control-action="paging">
      </div>
      <!-- text filter box -->
      <div class="text-filter-box">
         <i class="fas fa-search  jplist-icon"></i>
         <input
            data-path=".novica_naslov"
            type="text"
            value=""
            placeholder="Išči..."
            data-control-type="textbox"
            data-control-name="naslov-filter"
            data-control-action="filter"
         />
      </div>
    </div>
</div>
<!-- SIDEBAR -->
  </div>
  <div class="sidebar">
    <div class="side_cats">
      <div class="side_header">Iščejo dom</div>
      <div class="side_cats_list">
        <% sidebar_muce.forEach(function(sidebar_muca) { %>
          <div class="side_cat">
            <a href="/posvojitev/muce/<%= sidebar_muca.dbid %>">
              <img src="/files/oglasi_muce/<%= sidebar_muca.file_name1 %>" />
              <h5 class="side_cat_name"><%= sidebar_muca.ime %></h5>
            </a>
          </div>
        <% }) %>
      </div>
      <div class="side_more">
        <div class="side_btn"><a href="/posvojitev/muce">Vse muce <i class="fas fa-caret-right" aria-hidden="true"></i></a></div>
      </div>
    </div>
  </div>
</div>
</div>

<% include ../partials/footer %>
